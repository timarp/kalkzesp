<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.ula.liczby_zesp.MainActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TableRow
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <EditText
                android:id="@+id/i_val"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/i_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="i" />

            <EditText
                android:id="@+id/j_val"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/j_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="j" />

            <EditText
                android:id="@+id/k_val"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/k_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="k" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <EditText
                android:id="@+id/i_val2"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/i_txt2"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:text="i" />

            <EditText
                android:id="@+id/j_val2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/j_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="j" />

            <EditText
                android:id="@+id/k_val2"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/k_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="k" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <EditText
                android:id="@+id/i_val3"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/i_txt3"
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:text="i" />

            <EditText
                android:id="@+id/j_val3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/j_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="j" />

            <EditText
                android:id="@+id/k_val3"
                android:layout_width="91dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:inputType="numberSigned" />

            <TextView
                android:id="@+id/k_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="k" />
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:onClick="onClick"
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Button
                android:onClick="onClick"
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                />

            <Button
                android:onClick="onClick"
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:onClick="onClick"
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4" />

            <Button
                android:onClick="onClick"
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5" />

            <Button
                android:onClick="onClick"
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:onClick="onClick"
                android:id="@+id/b7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7" />

            <Button
                android:onClick="onClick"
                android:id="@+id/b8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8" />

            <Button
                android:onClick="onClick"
                android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:onClick="onClick"
                android:id="@+id/bMINUS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-" />

            <Button
                android:onClick="onClick"
                android:id="@+id/b0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />

            <Button
                android:id="@+id/bKROPKA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="." />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:onClick="onClick"
                android:id="@+id/bPLUSd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dodaj" />

            <Button
                android:onClick="onClick"
                android:id="@+id/bMINUSd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Odejmij" />

            <Button
                android:onClick="onClick"
                android:id="@+id/bMULTIPLYd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pomnóż" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/bACd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="AC" />

            <Button
                android:id="@+id/bCd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="C" />

            <Button
                android:id="@+id/bBACKd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Usuń" />

        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>
